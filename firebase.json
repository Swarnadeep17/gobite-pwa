{
  "hosting": {
    "public": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/",
        "destination": "/index.html"
      },
      {
        "source": "/instant.html",
        "destination": "/instant.html"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}